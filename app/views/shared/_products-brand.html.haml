.products-list-main2
  .products-list-main2__chanel
    .products-list-main2__chanel__head#chanel__head
      %span.products-list-main2__chanel__head__left
        シャネル新着アイテム
      =link_to '', class: 'products-list-main2__chanel__head__right' do
        もっと見る
        %span.products-list-main2__chanel__head__right__icon
          =fa_icon 'chevron-right'
    - products_chanel. each do |product|
      =link_to exhibit_product_path(product), class: 'products-list-main2__chanel__item' do
        .products-list-main2__chanel__item__flame
          =image_tag product.product_images[0].image.url, size: '188x188', class:'products-list-main2__chanel__item__flame__image'
          %span.products-list-main2__chanel__item__flame__price
            ='¥' + "#{product.price}"
        .products-list-main2__chanel__item__bottom
          %span.products-list-main2__chanel__item__bottom__name
            =product.name

